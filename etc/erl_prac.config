              {topic, <<"#">>},
              {qos, 1},
              {callback, {erl_prac, mqtt_handle_publish}}]
            ]},

        {pool_size, 1},
        {host, "a2n6dl6rjkcvi5.iot.us-east-1.amazonaws.com"},
        {port, 8883},
        {ssl, [
            {keyfile, "etc/certs/m2md-aws-iot-certs/m2md-private.key"}, 
            {certfile, "etc/certs/m2md-aws-iot-certs/m2md-cert.crt"}, 
